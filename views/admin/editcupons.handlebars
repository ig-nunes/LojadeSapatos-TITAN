<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Editar Cupom:</h3>
<div class="admin-container">
    <div class="admin"></div>
    {{#with cupom}}
    <form action="/admin/cupons/edit" method="POST">
        <input type="hidden" name="id" value="{{ _id }}">
        <label for="nome">Nome</label>
        <input class="form-control" type="text" id="nome" name="nome" placeholder="Nome do cupom" value="{{ nome }}">

        <label for="slug">Desconto</label>
        <input class="form-control" type="number" step="any" name="desconto" id="desconto" placeholder="Desconto do cupom"
            value="{{ desconto }}">

        <br>
        <button type="submit" class="btn btn-info"> Editar produto</button>
    </form>
    {{/with}}
</div>