<section class="area-login-admin">

  <div class="login-admin">
    <h2>Novo cupom</h2>
    <form action="/admin/cupons/novo" method="POST">
      <label for="nome">Nome</label>
      <input class="form-control" type="text" id="nome" name="nome" placeholder="Nome do cupom">

      <label for="desconto">Desconto</label>
      <input class="form-control" type="number" step="any" name="desconto" id="desconto"
        placeholder="Desconto do cupom">

      <br>
      <button class="btn btn-info">Criar cupom</button>
    </form>
  </div>
</section>