{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Editar postagem:</h4>
      <form action="/admin/postagens/nova" method="post">
        <label for="titulo">Titulo:</label>
        <input type="text" name="titulo" class="form-control"  requiredvalue="{{postagem.titulo}}">
        <label for="slug">Slug:</label>
        <input type="text" name="slug" class="form-control"  required value="{{postagem.slug}}">
        <label for="descricao">Descricao:</label>
        <input type="text" name="descricao" class="form-control"  required value="{{postagem.decricao}}">
        <label for="conteudo">Conteudo:</label>
        <textarea name="conteudo" class="form-control" required> {{postagem.conteudo}} </textarea>
        <label for="categoria">Categoria:</label>
        <select name="categoria" class="custom-select">
          {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria resgistrada</option>
          {{/each}}
        </select>
        <br><br>
        <button type="submit" class="btn btn-info"> Editar postagem</button>
    </form>
  </div>