<section id="detalhes" class="section-p1">
    <div class="image-produto">
        <img src="../../../img/Adidas1.webp" width="100%" id="Img" alt="Produto em específico">
    </div>

    {{!-- {{#with produto }} --}}
    <div class="detalhes-descricao">

        <h4><strong>{{ produto.nome }}</strong></h4>
            <h2>R$ {{ produto.preco }},00 </h2>
        <br>
            <h5>Categoria: {{ produto.categoria }}</h5>
            <h5>Marca: {{ produto.marca }}</h5>
            <select>
            <option>Select Size</option>
            <option>40</option>
            <option>42</option>
            <option>44</option>
            <option>46</option>
            </select>
                <div class="bloco">
            <form action="http://localhost:8088/usuarios/carrinho/add-carrinho/{{produto._id}}" method="post">
                <button type="submit" id="carrinho">Adicionar ao carrinho</button>
            </form>
            <form action="/usuarios/favoritos/add-favoritos/{{produto._id}}" method="post">
                <button type="submit" id="heart" class="bi bi-suit-heart"></button>
            </form>
            </div>
            <br>
            {{#if baixoEstoque }}
            <h5 style="color: red;">Produto com baixo estoque! Aproveite as últimas unidades!</h5>
            <h5 style="color: red;">Quantidade restante: {{ produto.quantEstoque }}</h5>
            {{else}}
            {{/if }}

        </div>


    </div>


</section>

<section id="product1" class="section-p1">
    <h2>Itens relacionados</h2>
    <p>Conforto e qualidade você encontra aqui!</p>
    <div class="pro-container">
        {{#if conteudo}}
        {{#each produtos}}
        <div class="pro" onclick="window.location.href='./{{ _id }}'">
            <img src="../../../img/Adidas1.webp" alt="Produto">
            <div class="descricao">
                <span>{{ categoria }}</span>
                <h5> {{ nome }} </h5>
                <div class="star">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <h4>R$ {{ preco }}</h4>
            </div>

            <form action="http://localhost:8088/usuarios/carrinho/add-carrinho/{{_id}}" method="post">
                <button type="submit" id="buttoon" class="fal fa-shopping-cart cart"></button>
            </form>
            <form action="/usuarios/favoritos/add-favoritos/{{_id}}" method="post">
                <button type="submit" id="buttoon" class="fa fa-heart heart"></button>
            </form>

        </div>
        {{/each}}
        {{else}}
        <p>Não encontramos itens relacionados ao produto '{{ produto.nome }}'</p>
        {{/if}}


</section>