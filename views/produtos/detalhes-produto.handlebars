<section id="detalhes" class="section-p1">
    <div class="image-produto">
        <img src="../img/Adidas1.webp" width="100%" id="Img" alt="Produto em específico">
    </div>

    {{#with produto }}
    <div class="detalhes-descricao">
        <h4>{{ nome }}</h4>
        <strong>
            <h2>R$ {{ preco }},00 </h2>
        </strong>
        <select>
            <option>Select Size</option>
            <option>P</option>
            <option>M</option>
            <option>G</option>
            <option>GG</option>
        </select>
        <div class="card-body">
            <h4>Nome: {{ nome }}</h4>
            <h4>preco: {{ preco }}</h4>
            <h4>Quantidade em Estoque: {{ quantEstoque }}</h4>
            <h4>Categoria: {{ categoria }}</h4>
            <h4>Marca: {{ marca }}</h4>
            <form action="http://localhost:8088/usuarios/carrinho/add-carrinho/{{_id}}" method="post">
                <button type="submit">Adicionar ao carrinho</button>
            </form>
            <form action="/usuarios/favoritos/add-favoritos/{{_id}}" method="post">
                <button type="submit">Adicionar aos favoritos</button>
            </form>
            <a href="http://localhost:8088/usuarios/carrinho">ir para o carrinho</a>
        </div>
        <div class="cor">
            <button style="background: red" id="botao-cor"></button>
            <button style="background: black" id="botao-cor"></button>
            <button style="background: white" id="botao-cor"></button>
            <button style="background: gray" id="botao-cor"></button>
        </div>
        <h4>Descrição do produto</h4>
        <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ullam, minus similique?</p>
        <div class="bloco">
            <input type="number" value="1">
            <button id="carrinho">Adicionar ao carrinho</button>
            <button class="fa fa-heart heart" id="heart"></button>
        </div>
        <p style="color: red;"> (Quantidade disponivel X) </p>
    </div>
    {{/with }}

</section>

