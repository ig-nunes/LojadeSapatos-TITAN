<section id="product1" class="section-p1">
    <h2>Itens relacionados</h2>
    <p>Conforto e qualidade você encontra aqui!</p>
    <div class="pro-container">
        {{#if conteudo}}
        {{#each produtos}}
        <div class="pro" onclick="window.location.href='./{{ _id }}'">
            <img src="../../../img/Adidas1.webp" alt="Produto">
            <div class="descricao">
                <span>{{ categoria }}</span>
                <h5> {{ nome }} </h5>
                <div class="star">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <h4>R$ {{ preco }}</h4>
            </div>
            <form action="http://localhost:8088/usuarios/carrinho/add-carrinho/{{_id}}" method="post">
                <button type="submit">Adicionar ao carrinho</button>
            </form>
            <form action="/usuarios/favoritos/add-favoritos/{{_id}}" method="post">
                <button type="submit">Adicionar aos favoritos</button>
            </form>
            {{!-- <a href="carrinho.html"><i class="fal fa-shopping-cart cart"></i></a>
            <a href="favoritos.html"><i class="fa fa-heart heart"></i></a> --}}
        </div>
        {{/each}}
        {{else}}
        <p>Não encontramos itens relacionados ao produto '{{ produto.nome }}'</p>
        {{/if}}


</section>