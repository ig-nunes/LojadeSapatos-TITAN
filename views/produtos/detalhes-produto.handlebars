<section id="detalhes" class="section-p1">
    <div class="image-produto">
        <img src="../../../img/Adidas1.webp" width="100%" id="Img" alt="Produto em específico">
    </div>

    {{!-- {{#with produto }} --}}
    <div class="detalhes-descricao">
        <h4>{{ produto.nome }}</h4>
        <h4>Descrição do produto</h4>
        <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ullam, minus similique?</p>
        <strong>
            <h2>R$ {{ produto.preco }},00 </h2>
        </strong>

        <div class="card-body">
            <h4>Nome: {{ produto.nome }}</h4>
            <h4>preco: {{ produto.preco }}</h4>
            <h4>Categoria: {{ produto.categoria }}</h4>
            <h4>Marca: {{ produto.marca }}</h4>
            {{#if baixoEstoque }}
            <h4 style="color: red;">Produto com baixo Estoque! Aproveite as últimas unidades!</h4>
            <h4 style="color: red;">Quantidade restante: {{ produto.quantEstoque }}</h4>
            {{else}}
            {{/if }}

            {{!-- <a href="http://localhost:8088/usuarios/carrinho">ir para o carrinho</a> --}}
        </div>
        <select>
            <option>Select Size</option>
            <option>P</option>
            <option>M</option>
            <option>G</option>
            <option>GG</option>
        </select>
        <form action="http://localhost:8088/usuarios/carrinho/add-carrinho/{{produto._id}}" method="post">
            <button type="submit">Adicionar ao carrinho</button>
        </form>
        <form action="/usuarios/favoritos/add-favoritos/{{produto._id}}" method="post">
            <button type="submit">Adicionar aos favoritos</button>
        </form>
